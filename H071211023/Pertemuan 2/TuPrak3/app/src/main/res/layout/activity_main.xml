<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="65sp"
        android:textColor="@color/dkblue"
        android:textAlignment="textEnd"
        android:layout_margin="16dp"
        android:layout_above="@id/button_layout"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonac"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="AC"
                android:textSize="30sp"
                android:onClick="ac"
                app:backgroundTint="@color/darkblue"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/buttondel"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="DEL"
                android:textSize="30sp"
                android:onClick="del"
                app:backgroundTint="@color/darkblue"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/buttonbagi"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="/"
                android:textSize="30sp"
                android:onClick="operation"
                app:backgroundTint="@color/dkblue"
                app:cornerRadius="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="7"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="8"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="9"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/buttonkali"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="x"
                android:textSize="30sp"
                android:onClick="operation"
                app:backgroundTint="@color/dkblue"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="4"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="5"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="6"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/buttonkurang"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="-"
                android:textSize="30sp"
                android:onClick="operation"
                app:backgroundTint="@color/dkblue"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="1"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="2"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="3"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/buttontambah"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:text="+"
                android:textSize="30sp"
                android:onClick="operation"
                app:backgroundTint="@color/dkblue"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button0"
                android:layout_width="185dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="6dp"
                android:text="0"
                android:textSize="30sp"
                android:onClick="number"
                app:backgroundTint="@color/brokblack"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/buttonhasil"
                android:layout_width="185dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="6dp"
                android:text="="
                android:textSize="30sp"
                android:onClick="result"
                app:backgroundTint="@color/dkblue"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>