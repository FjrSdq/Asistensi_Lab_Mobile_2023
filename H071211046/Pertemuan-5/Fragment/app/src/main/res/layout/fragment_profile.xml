<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3dfed"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77a9c9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ddecf3"
            android:fontFamily="@font/daysans"
            android:textSize="24sp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="160dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cinnamoroll" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/nama1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cinnamoroll"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:textColor="#7dafe2"
        android:fontFamily="@font/daysans"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/nama2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cinniipuppiii"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="145dp"
        android:fontFamily="@font/purplesmile"
        android:textColor="#aac2e6"
        android:textSize="18sp"/>

</FrameLayout>