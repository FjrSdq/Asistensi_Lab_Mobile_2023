<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/question3_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="200dp"
              app:cardCornerRadius="16dp"
              app:cardElevation="8dp"
              android:background="@drawable/question_bg">

              <TextView
                  android:id="@+id/textview"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:layout_marginTop="50dp"
                  android:fontFamily="@font/loftus"
                  android:hint="putri"
                  android:textColor="#434343"
                  android:textColorHint="#616568"
                  android:textSize="20dp" />
          </LinearLayout>


            <Button
                android:id="@+id/option1"
                android:hint="putri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#cbddeb"
                android:fontFamily="@font/made_mirage_medium"
                android:textColor="@color/white"
                android:textColorHint="#616568"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/optiona"
                android:hint="putri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#d3dfed"
                android:fontFamily="@font/made_mirage_medium"
                android:textColor="@color/white"
                android:textColorHint="#616568"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/optionb"
                android:hint="putri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#cde0ef"
                android:fontFamily="@font/made_mirage_medium"
                android:textColor="@color/white"
                android:textColorHint="#616568"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/optionc"
                android:hint="putri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#b1cde2"
                android:fontFamily="@font/made_mirage_medium"
                android:textColor="@color/white"
                android:textColorHint="#616568"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/optiond"
                android:hint="putri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#8bbdd8"
                android:fontFamily="@font/made_mirage_medium"
                android:textColor="@color/white"
                android:textColorHint="#616568"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/nextbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="#9fb8d6"
                android:fontFamily="@font/loftus"
                android:text="next"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="18sp"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>