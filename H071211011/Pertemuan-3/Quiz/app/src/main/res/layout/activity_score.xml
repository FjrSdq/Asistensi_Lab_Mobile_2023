<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreActivity"
    android:background="@drawable/layout_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/fontdiner_swanky"
        android:text="QUIZ"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:layout_marginVertical="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GAME OVER !"
            android:fontFamily="@font/bubblegum_sans"
            android:textColor="#051C4A"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginBottom="40dp"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7058ACB6"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#651CA3E1"
                android:layout_margin="10dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#051C4A"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        android:layout_marginBottom="10dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_margin="20dp">
                            <TextView
                                android:id="@+id/tv_yourScore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Your Score"
                                android:textSize="30sp"
                                android:fontFamily="@font/bubblegum_sans"
                                android:textColor="@color/white"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/tv_score"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#048e9c"
                                android:textSize="50sp"
                                android:fontFamily="@font/bubblegum_sans"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/tv_newBestScore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Best Score"
                                android:textSize="25sp"
                                android:fontFamily="@font/bubblegum_sans"
                                android:textColor="@color/white"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/tv_bestScore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#048e9c"
                                android:gravity="center"
                                android:textSize="25sp"
                                android:fontFamily="@font/bubblegum_sans"
                                android:layout_marginBottom="20dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <Button
                        android:id="@+id/btn_home"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/black"
                        app:cornerRadius="50dp"
                        android:fontFamily="@font/bubblegum_sans"
                        android:text="Back to Home"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>