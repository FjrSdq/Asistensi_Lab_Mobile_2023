<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity"
    android:background="@drawable/layout_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/fontdiner_swanky"
        android:text="QUIZ"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:layout_marginVertical="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 of 5"
            android:fontFamily="@font/bubblegum_sans"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="40sp"/>

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">
            <View
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_question">

            </View>

            <TextView
                android:id="@+id/tv_quest"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"
                android:text="question"
                android:textSize="20sp"
                android:fontFamily="@font/bubblegum_sans"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp">
            <View
                android:id="@+id/v_answer1"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_answer">

            </View>
            <TextView
                android:id="@+id/tv_answ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/bubblegum_sans"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp">
            <View
                android:id="@+id/v_answer2"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_answer">

            </View>
            <TextView
                android:id="@+id/tv_answ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 2"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/bubblegum_sans"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp">
            <View
                android:id="@+id/v_answer3"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_answer">

            </View>
            <TextView
                android:id="@+id/tv_answ3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 3"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/bubblegum_sans"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <View
                android:id="@+id/v_answer4"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_answer">

            </View>
            <TextView
                android:id="@+id/tv_answ4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 4"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/bubblegum_sans"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>